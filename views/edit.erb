<form method= "post" action="/pizzas/<%= @pizza.id  %>">
<label for = "first_name"><span class = "label">First Name:</span></label>
<input id = "first_name" value = "<%= @pizza.first_name %>" type = "text" name = "first_name"/>

<br/>

<label for = "last_name"><span class = "label">Last Name:</span></label>
<input id = "last_name" value = "<%= @pizza.last_name %>"  type = "text" name = "last_name"/>

<br/>

<label for = "pizza_select"><span class = "label">Select a Pizza:</span></label>
<select id = "pizza_select" name = "topping">
  <option value = "Margherita" <%= "selected" if @pizza.topping == "Margherita" %>> Margherita</option>
  <option value = "Calzone" <%= "selected" if @pizza.topping == "Calzone" %>>Calzone</option>
  <option value = "Pepperoni" <%= "selected" if @pizza.topping == "Pepperoni" %>>Pepperoni</option>
  <option value = "Italian Sausage" <%= "selected" if @pizza.topping == "Italian Sausage" %>>Italian Sausage</option>
</select>

<br/>

<label for = "quantity"><span class = "label">Quantity:</span></label>
<input id = "quantity" value = "<%= @pizza.quantity %>" type = "number" name = "quantity"/>

<br/>

<input type = "submit" value="Update Order"/>
</form>